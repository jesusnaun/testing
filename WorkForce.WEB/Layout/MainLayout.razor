    </div>

    <div class="header-right">
        <nav class="top-nav">
            <ul>
                @* <li class="@IsActive("Main")"><a href="Main">Home</a></li> *@

                <li class="@IsActive("Main")"><NavLink href="Main" Match="NavLinkMatch.All" @onclick="() => CloseMenu()">Home</NavLink></li>
                <li class="@IsActive("Contractor")"><NavLink href="Contractor" Match="NavLinkMatch.All" @onclick="() => CloseMenu()">Contractor</NavLink></li>
                <li class="@IsActive("Tradespeople")"><NavLink href="Tradespeople" Match="NavLinkMatch.All" @onclick="() => CloseMenu()">Tradespeople</NavLink></li>
                <li class="@IsActive("Trades")"><NavLink href="Trades" Match="NavLinkMatch.All" @onclick="() => CloseMenu()">Trades</NavLink></li>
                <li class="@IsActive("Locations")"><NavLink href="Locations" Match="NavLinkMatch.All" @onclick="() => CloseMenu()">Locations</NavLink></li>
                <li class="@IsActive("About")"><NavLink href="About" Match="NavLinkMatch.All" @onclick="() => CloseMenu()">About</NavLink></li>

               @*  <li class="@IsActive("Contractor")"><a href="Contractor">Contractors</a></li> 
                <li class="@IsActive("Tradespeople")"><a href="Tradespeople">TradesPeople</a></li>
                <li class="@IsActive("Trades")"><a href="Trades">Trades</a></li>
                <li class="@IsActive("Locations")"><a href="Locations">Locations</a></li>
                <li class="@IsActive("About")"><a href="About">About</a></li>*@
            </ul>
        </nav>
    </div>
</header>

@Body

