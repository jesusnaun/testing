@inject NavigationManager NavigationManager


<header class="site-header @(isMenuOpen ? "open" : "")">
    <!-- Lado Izquierdo sin cambios -->
    <div class="header-left">
        <a href="main.html">
            <img src="images/icono-color-horizontal.png" alt="Logo" class="logo-img" />
        </a>
        <!-- Botón de menú móvil -->
        @* <button class="menu-toggle" aria-label="Abrir menú"> *@
